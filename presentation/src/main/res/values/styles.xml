<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_thin" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_thin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#4E4E4E</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_small_white" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_bold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="lineHeight">59sp</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">39sp</item>
    </style>

    <style name="text_bold_small" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="lineHeight">59sp</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ConversationSearch" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <style name="FabDiamondOverlay" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>